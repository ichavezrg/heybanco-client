{
  "name": "ichavezrg/heybanco-client",
  "description": "Cliente PHP para la API de HeyBanco",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "heybanco",
    "api",
    "client",
    "caas",
    "php",
    "banking",
    "fintech"
  ],
  "homepage": "https://github.com/ichavezrg/heybanco-client",
  "support": {
    "issues": "https://github.com/ichavezrg/heybanco-client/issues",
    "source": "https://github.com/ichavezrg/heybanco-client"
  },
  "autoload": {
    "psr-4": {
      "Ichavezrg\\HeyBancoClient\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Ivan Chavez",
      "email": "ichavez@redgirasol.com",
      "role": "Developer"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.1",
    "ext-curl": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.0",
    "web-token/jwt-framework": "^3.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0 || ^11.0",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "scripts": {
    "test": "phpunit --testdox --colors=always",
    "test-coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse src tests --level=8",
    "cs-check": "phpcs src tests --standard=PSR12",
    "cs-fix": "phpcbf src tests --standard=PSR12"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  }
}
